
<h1>Support And Advice</h1>
<br>
<% @posts.each do |post| %>
<div class="col-md-4">
    <div class="post">
        <h2 class="post-title"><%= post.title %></h2>
<%= link_to "View Post", post_path(post), class: "btn-custom "%>
<br>
<br>
    <%= link_to 'Add to favorites', post_favorite_posts_path(post.id, @post), method: :post %> ||
    <%= link_to 'Remove from favorites', post_favorite_posts_path(post.id, @post), method: :delete %>

  </div>
</div>
<% end %>
<i class="icon ion-heart"></i>.
